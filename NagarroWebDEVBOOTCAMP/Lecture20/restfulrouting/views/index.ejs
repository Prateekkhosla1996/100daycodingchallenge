<body>
    <h1>All comments</h1>
    <% for(let c of comments){ %>
<li><%= c.body %> <strong> <%= c.username %> </strong><a href="/comments/<%=c.id%>">view</a>
    <form action="/comments/<%=c.id%>"?_method=DELETE>
    <button>DELETE</button></form>
</li>
    <% } %>
</body>
</html>